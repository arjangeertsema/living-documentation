doctype html
html
  head
    meta(charset='UTF-8')
    title=title
    
    link(rel='stylesheet' type='text/css' href=root + 'assets/style/email/style.css')

    if(googleFont)
      link(rel='preconnect' href='https://fonts.googleapis.com')
      link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
      link(href=googleFont rel='stylesheet')
  body
    section(class='mail')
      header(class='mail-header')
        dl 
          dt=locale.from
          dd. 
            !{from.email}
          dt=locale.to
          dd.
            !{to.email}
          dt=locale.subject
          dd=subject

      article
        header
          figure
            img(src=root + 'assets/images/message/logo.svg')

        main
          | !{message}

        footer
           div(class='contact')
            if(from && from.name)
              p
                | !{from.name}

            | !{footer}

        if attachments
          attachments
            h3=locale.attachments
            ul
              each attachment in attachments
                li=attachment

    script.
      (() => {
        const calculateHeight = () => {
          const body = document.body, html = document.documentElement;

          return Math.max(
            body.scrollHeight,
            body.offsetHeight,
            html.clientHeight,
            html.scrollHeight,
            html.offsetHeight);
        };

        //Polyfill disturbes the iframe resizer, calculate height manually.      
        window.iFrameResizer = {
          heightCalculationMethod: () => { return calculateHeight(); }
        };
      })();
    
    script(src=root + 'assets/iframe-resizer-dist/iframeResizer.contentWindow.min.js' charset='UTF-8')
