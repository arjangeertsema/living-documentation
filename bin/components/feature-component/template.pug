mixin scenarios(scenarios)
  ul(class='scenarios')
    each scenario in scenarios    
      li(class='scenario ' + scenario.status.type)
        button(class='item' aria-expanded='true')= scenario.name
          if scenario.scenarios
            +scenarios(scenario.scenarios)
          else       
            ul(class='steps')              
              each step in scenario.steps 
                li(class='step ' + step.type + ' ' + scenario.status.type)
                  span(class='item') 
                    span(class='keyword')= step.keyword
                    span= step.text

ul(class='collapse-list features')
  each feature in features
    li(class='feature has-children')
      button(role='button' class='status status-'+ feature.status.type data-toggle='collapse' aria-controls='scenarios-' + feature.id aria-expanded='false')
        +scenarios(feature.scenarios)

