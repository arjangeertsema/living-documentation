mixin button()
  button(type='button' title='Maximize' data-toggle="fullscreen")
    span(class='label')='Zoom'

div(data-fullscreen="false")
  header
    +button()
  
  | !{html}
  
  footer    
    +button()
    div(class='figure-zoom')
        button(type='button' title='Zoom reset' data-figure-zoom="reset")
            span(class='label')!='&#8634;'
        button(type='button' title='Zoom in' data-figure-zoom="in")
            span(class='label')!='&plus;'
        button(type='button' title='Zoom uit' data-figure-zoom="out")
            span(class='label')!='&minus;'

