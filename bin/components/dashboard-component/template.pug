div(class='dashboard-list')
  each segment, key in summary
    div(class='dashboard')
      h3= key

      figure(class='chart chart-doughnut')
        svg(viewBox='0 0 63.662 63.662' class='chart-doughnut' width='100' height='100')
          circle(cx="31.831" cy="31.831" r="15.9155" fill="none" class='circle-base' stroke-width='31.831')
          each status, key in segment
            if key != 'total'
              circle(cx="31.831" cy="31.831" r="15.9155" fill="none" class='circle-' + key stroke-width='31.831' stroke-dasharray=status.percentage + ' 100' stroke-dashoffset=status.offset * -1)
          circle(cx="31.831" cy="31.831" r="23.87325" fill="white" stroke-width="0")
          text(x='31.831' y='37' class='text')= segment.total.value

      ul(class='legend')
        each status, key in segment
          if key != 'total'
            li(class='legend-' + key)
              span(class='percentage')= status.percentage + '%'
              span(class='count')= status.value
              span(class='label')= key
.
  !{features}