doctype html
html 
  head
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    meta(name='viewport' content='width=device-width,initial-scale=1.0')
    meta(name='robots' content='noindex, nofollow')
    title=title 
    link(rel='stylesheet' type='text/css' href=relative.root + 'assets/style/page/style.css')

    if(options.googleFont)
      link(rel='preconnect' href='https://fonts.googleapis.com')
      link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
      link(href=options.googleFont rel='stylesheet')

    link(href=relative.root + 'assets/prismjs/prism-coy.min.css' rel='stylesheet')
    link(href=relative.root + 'assets/prismjs/prism-line-numbers.min.css' rel='stylesheet')

    link(rel='icon' href=relative.root + 'assets/images/page/favicon-32w.ico' sizes='any')
    link(rel='icon' href=relative.root + 'assets/images/page/favicon.svg' type='image/svg+xml')
    link(rel='apple-touch-icon' type='image/png' href=relative.root + 'assets/images/page/favicon-180w.png')

  body(class='line-numbers' class={feature: git.branch.feature})

    header
      div(class='container')
        div(class='bar')
          div(class='logo')
            a(href=relative.root + 'index.html' title='home')
              img(src=relative.root + 'assets/images/page/logo.svg' alt=title)

          h1(class='title')=title

          if(showNav)
            div(class='nav')
              if(logout)
                a(href=logout.route)
                  span=logout.text

              a(href='#git-branch-menu' class='menu-toggle menu-toggle-branches' aria-controls='git-branch-menu' aria-expanded='false')
                span(class='icon')
                  svg(aria-hidden='true' height='16' viewBox='0 0 16 16' version='1.1' width='16' data-view-component='true' class='octicon octicon-git-branch')
                    path(fill-rule='evenodd' d='M11.75 2.5a.75.75 0 100 1.5.75.75 0 000-1.5zm-2.25.75a2.25 2.25 0 113 2.122V6A2.5 2.5 0 0110 8.5H6a1 1 0 00-1 1v1.128a2.251 2.251 0 11-1.5 0V5.372a2.25 2.25 0 111.5 0v1.836A2.492 2.492 0 016 7h4a1 1 0 001-1v-.628A2.25 2.25 0 019.5 3.25zM4.25 12a.75.75 0 100 1.5.75.75 0 000-1.5zM3.5 3.25a.75.75 0 111.5 0 .75.75 0 01-1.5 0z')/
                span(class='label')= git.branch.name

              a(href=git.branch.url + '/docs/' + sourceFile class='git' title=locale.view_source_file)
                span(class='icon')
                  svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' title=git.type)
                    path(d='M15.698 7.287 8.712.302a1.03 1.03 0 0 0-1.457 0l-1.45 1.45 1.84 1.84a1.223 1.223 0 0 1 1.55 1.56l1.773 1.774a1.224 1.224 0 0 1 1.267 2.025 1.226 1.226 0 0 1-2.002-1.334L8.58 5.963v4.353a1.226 1.226 0 1 1-1.008-.036V5.887a1.226 1.226 0 0 1-.666-1.608L5.093 2.465l-4.79 4.79a1.03 1.03 0 0 0 0 1.457l6.986 6.986a1.03 1.03 0 0 0 1.457 0l6.953-6.953a1.031 1.031 0 0 0 0-1.457')
        if(showNav)
          nav(id='git-branch-menu' hidden='true')
            ul 
              each branch in git.branches 
                li 
                  a(href=relative.basePath + branch.path data-branch-url=relative.basePath + branch.path)= branch.name
    main
      | !{content}

    script(src=relative.root + 'assets/iframe-resizer-dist/iframeResizer.min.js' charset='UTF-8')
    script(src=relative.root + 'assets/bpmn-js-dist/bpmn-navigated-viewer.production.min.js' charset='UTF-8')

    script(src=relative.root + 'assets/prismjs/components/prism-core.min.js' charset='UTF-8')
    script(src=relative.root + 'assets/prismjs/prism-autoloader.min.js' charset='UTF-8')
    script(src=relative.root + 'assets/prismjs/prism-line-numbers.min.js' charset='UTF-8')

    script(src=relative.root + 'assets/scripts/h3.js' charset='UTF-8')
    script(src=relative.root + 'assets/scripts/iframe.js' charset='UTF-8')
    script(src=relative.root + 'assets/scripts/fullscreen.js' charset='UTF-8')
    script(src=relative.root + 'assets/scripts/git.js' charset='UTF-8')
    script(src=relative.root + 'assets/scripts/menu.js' charset='UTF-8')
    script(src=relative.root + 'assets/scripts/scroll-spy.js' charset='UTF-8')
    script(src=relative.root + 'assets/scripts/tabs.js' charset='UTF-8')
    script(src=relative.root + 'assets/scripts/user-task.js' charset='UTF-8')
