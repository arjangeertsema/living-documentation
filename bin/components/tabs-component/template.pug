div(class='tabs-container')
  div(class='tabs-list-container')
    div(class='tabs-scroll-container')
      ul
        each tab, index in tabs
          li
            a(href='#' + tab.id aria-expanded=index == 0 ? 'true' : 'false')= tab.text

  div(class='tabs-panels-container')
    each tab, index in tabs
      div(id=tab.id hidden=index > 0)
        | !{tab.html}